<div class="container mt-4">
  <h3 class="text-center mb-4">Add an Ingredient to Your Pantry</h3>

  <%= form_with url: "/pantry/add_ingredient", method: :post, data: { turbo: false }, class: "form-group" do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :name, "Ingredient Name", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :quantity, "Quantity", class: "form-label" %>
          <%= f.text_field :quantity, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :exp_date, "Expiration Date", class: "form-label" %>
          <%= f.date_field :exp_date, class: "form-control" %>
        </div>

        <%= f.submit "Add Ingredient", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>