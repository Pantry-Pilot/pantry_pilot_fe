<Recipes>
<%= form_with(url: "/dashboard/search", method: :get, local: true) do |form| %>
  <div>
    <%= form.label :query, "Search for recipes:" %>
    <%= form.text_field :query %>
    <%= form.submit "Search" %>
  </div>
<% end %>

<% if @recipes.present? %>
  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <h2><%= link_to recipe.title, "/dashboard/search/#{recipe.id}" %></h2>
        <%= image_tag(recipe.image, alt: recipe.title, height: "100") if recipe.image.present? %>
      </div>
    <% end %>
  </div>
<% end %>