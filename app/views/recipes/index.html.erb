<div class="form-container">
  <%= form_with(url: "/dashboard/search", method: :get, local: true) do |form| %>
    <div>
      <%= form.label :query, "Search for recipes:" %>
      <%= form.text_field :query %>
      <%= form.submit "Search" %>
    </div>
  <% end %>
</div>
<div class="container">
  <div id="recipes" class="row">
    <% if @recipes.present? %>
      <% @recipes.each do |recipe| %>
        <div class="col-md-6">
          <a href="/dashboard/search/<%= recipe.id %>" class="recipe-link">
            <div class="recipe-container">
              <%= image_tag(recipe.image, alt: recipe.title, class: "recipe-image") if recipe.image.present? %>
              <div class="recipe-details">
                <h2><%= recipe.title %></h2>
                <p><%= recipe.summary %></p>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
